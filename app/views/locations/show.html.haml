%h1= @location.name
%span.button
  Create New Cohort

%table
  %tbody
    - @location.cohorts.each do |cohort|
      %tr
        %td= link_to cohort.name, cohort_path(cohort)
        %td= cohort.start_date
        %td= cohort.end_date
        %td
          .span.button
            View Cohort
        %td
          .span.button
            Edit Cohort


.new_cohort_modal
  %h1 Create a New Cohort
  = form_for Cohort.new do |f|
    = render 'cohorts/form', f: f